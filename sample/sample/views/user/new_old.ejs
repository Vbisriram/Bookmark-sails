

<div class="container" id="container1">
  <div class="row centered-form">

    <div class="col-xs-12 col-sm-8 col-md-2 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Please Register</h3>
        </div>
        <div class="panel-body">
          <div class="tutorialWrapper">
          <!-- <form role="form" action="create" method="POST" class="form-signin"> -->

          <form action="create" method="POST" id="sign-up-form" class="form-signin">
            <h2 class="form-signin-heading">Create an account</h2>
            <div class="form-group">
              <input type="text" name="name" id="name" class="form-control input-sm" placeholder="Name">
            </div>

            <div class="form-group">
              <input type="text" name="username" id="username" class="form-control input-sm" placeholder="username">
            </div>

            <div class="form-group">
              <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
            </div>

            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">

                <div class="form-group">
                  <div class="fieldWrapper">
                  <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                </div>
              </div>

              <div class="form-group">

                  <div class="fieldWrapper">
                  <input type="password" name="confirmation" id="pass" class="form-control input-sm" placeholder="Confirm Password" onkeyup="checkPass(); return false;">
                </div>
              </div>
              </div>
            </div>
            <!-- <input type="hidden"  name="csrf"  value="<%= _csrf%>" > -->
            <input type="submit" class="btn btn-info btn-block" value="Create Account">
          </form>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
